<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.geometry.Insets?>

<GridPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" 
	alignment="CENTER" hgap="10" vgap="10" fx:controller="hbm.controller.LoginController">
	
	<padding>
		<Insets top="25" right="25" bottom="25" left="25" />
	</padding>
	
	<children>
	
		<Text text="HBM Login">
			<GridPane.columnIndex>0</GridPane.columnIndex>
			<GridPane.rowIndex>0</GridPane.rowIndex>
			<GridPane.columnSpan>2</GridPane.columnSpan>
			<GridPane.rowSpan>1</GridPane.rowSpan>
			<font>
				<Font size="20" />
			</font>
		</Text>
		
		<Label text="아이디" >
			<GridPane.columnIndex>0</GridPane.columnIndex>
			<GridPane.rowIndex>1</GridPane.rowIndex>
		</Label>
		<!-- (TextField) tfLoginId -->
		<TextField fx:id="tfLoginId" promptText="id">
			<GridPane.columnIndex>1</GridPane.columnIndex>
			<GridPane.rowIndex>1</GridPane.rowIndex>
		</TextField>
		
		<Label text="비밀번호" >
			<GridPane.columnIndex>0</GridPane.columnIndex>
			<GridPane.rowIndex>2</GridPane.rowIndex>
		</Label>
		<!-- (PasswordField) pfLoginPw -->
		<PasswordField fx:id="pfLoginPw" promptText="password">
			<GridPane.columnIndex>1</GridPane.columnIndex>
			<GridPane.rowIndex>2</GridPane.rowIndex>
		</PasswordField>
		
		<!-- (Button) btnJoin -->
		<HBox spacing="10" alignment="BOTTOM_LEFT">
			<GridPane.columnIndex>0</GridPane.columnIndex>
			<GridPane.rowIndex>4</GridPane.rowIndex>
			<Button text="회원가입" onAction="#join" />
		</HBox>
		
		<!-- (Button) btnLogin -->
		<HBox spacing="10" alignment="BOTTOM_RIGHT">
			<GridPane.columnIndex>1</GridPane.columnIndex>
			<GridPane.rowIndex>4</GridPane.rowIndex>
			<Button text="로그인" onAction="#login" />
		</HBox>
		
		<!-- (Text) txtLoginStatus -->
		<Text fx:id="txtLoginStatus" text="로그인 상태" fill="FIREBRICK">
			<GridPane.columnIndex>1</GridPane.columnIndex>
			<GridPane.rowIndex>6</GridPane.rowIndex>
		</Text>
		
	</children>
</GridPane>

